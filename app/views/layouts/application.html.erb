<!DOCTYPE html>
<html>
  <head>
    <title>InstagramðŸ“·Clone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag('favicon.ico') %>
  </head>

  <body>
    <header class="container-fluid">
      <h1 id="head_title">ðŸ–¤InstagramðŸ“·CloneðŸ–¤</h1>
      <% if logged_in? %>
        <ul class="row">
          <li class="col-md-2"><%= link_to 'Home', pictures_path %></li>
          <li class="col-md-2"><%= link_to "Profile", user_path(current_user.id) %></li>
          <li class="col-md-2"><%= link_to "Logout", session_path(current_user.id), method: :delete %></li>
          <li><p>name: <%= current_user.name %></p></li>
        </ul>
      <% else %>
        <ul class="row">
          <li class="col-md-2"><%= link_to "Sign up", new_user_path %></li>
          <li class="col-md-2 col-md-offset-8"><%= link_to "Login", new_session_path %></li>
        </ul>
      <% end %>
      </header>
  
      <div class="content_area">
        <div class="notification">
          <% flash.each do |key, value| %>
            <%= content_tag(:div, value, class: "#{key}") %>
          <% end %>
        </div>
        <%= yield %>
      </div>
    </body>
  </html>