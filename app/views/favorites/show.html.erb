<h1><%= @user.name %>list of favorites</h1>
  <table>
    <% @favorites.each do |favorite| %>
      <tbody>
        <tr>
          <td><%= favorite.user.name %></td>
        </tr>
        <tr>
          <td><%= favorite.picture.content %></td>
        </tr>
        <tr>
          <td><%= image_tag(favorite.picture.image.url) %></td>
        </tr>
      </tbody>
      <tfooter>
        <tr>
          <td><%= link_to 'Remove form favorite', favorite_path(id: favorite.id), method: :delete, class: 'btn btn-danger' %></td>
        </tr>
      </tfooter>
    <% end %>
  </table>