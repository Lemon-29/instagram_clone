<h1>Home</h1>
<div class="picture_content">

<table>
  <% @pictures.each do |picture| %>
  <tbody>
    <tr>
    <td><%= picture.user.name %></td>
    </tr>
    <tr>
    <td><%= picture.content %></td>
    </tr>
    <tr>
    <td><%= image_tag(picture.image.to_s) %></td>
    </tr>
  </tbody>

  <tfooter>
    <tr>
      <td>
        <%= link_to 'Show', picture %>
        <% if picture.user.id == current_user.id %>
        <%= link_to 'Edit', edit_picture_path(picture) %>
        <%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure? You wanna delete it?' } %>
        <% end %>
      </td>
    </tr>
  </tfooter>
</table>
</div>

<% end %>

<%= link_to “Post”, new_picture_path %>