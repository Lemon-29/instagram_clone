<%= form_with(modele: @picture, local: true, url: choose_new_or_edit) do |f| %>
  <% if @picture.errors.any? %>
   <div id = "error_explanetion">
    <h2><%= @picture.errors.count %> errors</h2>
    <ul>
    <% @picture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class = "field">
    <% f.label "Title" %>
    <% f.text_field :title %><br>
    <% f.label "Text" %>
    <% f.text_field :content %><br>
    <% f.label "Image" %>
    <% if @picture.image.url %>
      <% image_tag(@picture.image.url) if @picture.image $$ @picture.image.url %>
    <% end %>
    <% f.file_field :image %>
    <% f.hideen_field :image_cache %><br>
    <%= f.submit "Post" %><br>
  </div>
<% end %>

